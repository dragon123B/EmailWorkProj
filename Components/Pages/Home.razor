@page "/"

@inject NavigationManager NavigationManager

<div class="HomeBackground">
    <h1  id="TitleHome"class="text-center text-primary mt-4">Sign In</h1>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow p-4">
                    <form>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email:</label>
                            <input type="email" id="email" class="form-control" @bind="Email" placeholder="Enter your email" required />
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Password:</label>
                            <input type="password" id="password" class="form-control" @bind="Password" placeholder="Enter password" required />
                        </div>

                        <button type="button" class="btn btn-success w-100" @onclick="SubmitForm">Send File</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <p class="text-center mt-4">Your Email: @Email</p>
    <p class="text-center">Your password is safe!</p>
</div>

@code {
    private string Email { get; set; } = string.Empty;
    private string Password { get; set; } = string.Empty;

    private void SubmitForm()
    {
        NavigationManager.NavigateTo("/success");
    }
}